{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended"
  ],
  "baseBranches": ["main"],
  "branchTopic": "td-nature",
  "prConcurrentLimit": 1,
  "timezone": "Europe/Moscow",
  "prFooter": "",
  "separateMajorMinor": false,
  "enabledManagers": ["npm"],
  "packageRules": [
    {
      "matchUpdateTypes": ["minor", "patch"],
      "matchPackageNames": ["tact"],           
      "automerge": false
    }
  ]
}